@page "/MiVista"
@using blazernuevo.Components.Data
@rendermode InteractiveServer
@inject Servicios.ServicioControlador ServicioControlador


<h3>Juegos</h3>

Solo ver Jugados.
<input type="checkbox" checked="@ServicioControlador.MostrarSoloJugados" @onchange="CambiarFiltro" />

<div style="margin-top: 10px; margin-bottom: 10px;">
    <input 
        value="@ServicioControlador.FiltroNombre" 
        placeholder="Filtrar por nombre..." 
        @oninput="ActualizarFiltroNombre" />
</div>

    <ul>
        @foreach (var j in juegos)
        {
            <li>
                @if (juegoEnEdicion != null && juegoEnEdicion.Identificador == j.Identificador)
                {
                    <input @bind="juegoEnEdicion.Nombre" />
                    <button @onclick="GuardarEdicion">💾</button>
                    <button @onclick="CancelarEdicion">❌</button>
                }
                else
                {
                    @j.Nombre
                    @(" " + (j.Jugado ? "Ya jugado" : "Pendiente"))
                    <input type="checkbox" checked="@j.Jugado" @onclick="()=> cambiarJugado(j)" />
                    <button @onclick="() => EditarJuego(j)">✏️</button>
                    <button @onclick="() => BorrarJuego(j)">🗑️</button>
                }
            </li>
        }
    </ul>


<div>
    <input @bind="newJuego.Nombre" placeholder="Agregar Juego" />
    <button @onclick="AgregarJuego">Agregar Juego</button>
</div>

@code {
    private List<Juego> juegos = new();
    private Juego newJuego = new();
    private Juego juegoEnEdicion = null; 

   private async Task CargarJuegos()
{
    juegos = await ServicioControlador.ObtenerJuegos();
}

private async Task ActualizarFiltroNombre(ChangeEventArgs e)
{
    ServicioControlador.FiltroNombre = e.Value?.ToString();
    await CargarJuegos(); 
}

   	private async Task cambiarJugado(Juego j)
   	{
   	    Console.WriteLine($"ME CAMBIARON YO: {j.Nombre}");
   	    j.Jugado = !j.Jugado;
        await ServicioControlador.ActualizarJuego(j); 
        await CargarJuegos(); 
   	}

    private void EditarJuego(Juego j)
    {
        juegoEnEdicion = new Juego
        {
            Identificador = j.Identificador,
            Nombre = j.Nombre,
            Jugado = j.Jugado
        };
    }

    private async Task GuardarEdicion()
    {
        if (juegoEnEdicion != null && !string.IsNullOrWhiteSpace(juegoEnEdicion.Nombre))
        {
            await ServicioControlador.ActualizarJuego(juegoEnEdicion);
            await CargarJuegos();
            juegoEnEdicion = null;
        }
    }

    private void CancelarEdicion()
    {
        juegoEnEdicion = null;
    }


   	private async Task BorrarJuego(Juego juegoABorrar)
    {
        juegos.Remove(juegoABorrar);
        await ServicioControlador.BorrarJuego(juegoABorrar);
        await CargarJuegos();
    }

    private async Task CambiarFiltro(ChangeEventArgs e)
    {
        ServicioControlador.MostrarSoloJugados = (bool)e.Value;
        await CargarJuegos();
    }


   	private async Task AgregarJuego()
   	{
   	    if (!string.IsNullOrWhiteSpace(newJuego.Nombre))
   	    {
   	        await ServicioControlador.AgregarJuego(newJuego);
 	 	    await CargarJuegos();
   	        newJuego = new Juego();
   	    }
   	}

   	protected override async Task OnInitializedAsync()
   	{
   	    await CargarJuegos();
   	}
}